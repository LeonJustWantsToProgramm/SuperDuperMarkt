        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperDuperMarkt"
        mc:Ignorable="d"
        Title="ProduktauswahlFenster" Height="450" Width="800">
    <Grid>
        <Button Content="Suchen" HorizontalAlignment="Left" Margin="262,11,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
