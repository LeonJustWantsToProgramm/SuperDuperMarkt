        <Button Content="Zum Warenkorb hinzufügen" HorizontalAlignment="Left" Margin="10,266,0,0" VerticalAlignment="Top" Width="176" Click="Button_Click_1"/>
        <Label Content="Produktname" HorizontalAlignment="Left" Margin="24,76,0,0" VerticalAlignment="Top" Width="89"/>
        <Label Content="Produktpreis" HorizontalAlignment="Left" Margin="24,107,0,0" VerticalAlignment="Top"/>
        <Label Content="Beschreibung" HorizontalAlignment="Left" Margin="24,138,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="P_Name" HorizontalAlignment="Left" Margin="111,81,0,0" TextWrapping="Wrap" Text="PRODUKTNAME" VerticalAlignment="Top" Width="117"/>
        <TextBlock x:Name="P_Preis" HorizontalAlignment="Left" Margin="111,112,0,0" TextWrapping="Wrap" Text="PRODUKTPREIS" VerticalAlignment="Top" Width="93"/>
