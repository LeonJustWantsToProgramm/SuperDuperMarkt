<Window x:Class="SuperDuperMarkt.Anmeldefenster"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperDuperMarkt"
        mc:Ignorable="d"
        Title="Anmeldefenster" Height="286" Width="344">
    <Grid>
        <Label Content="Als Kunde anmelden" HorizontalAlignment="Left" Margin="85,10,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label Content="E-Mail:" HorizontalAlignment="Left" Margin="37,71,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Passwort:" HorizontalAlignment="Left" Margin="37,105,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="AnmeldeEMailTBox" HorizontalAlignment="Left" Margin="130,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="165" FontSize="14"/>
        <PasswordBox x:Name="AnmeldePasswortTBox" HorizontalAlignment="Left" Margin="130,109,0,0" VerticalAlignment="Top" Width="165" FontSize="14"/>
        <Button x:Name="AnmeldeBtn" Content="Anmelden" HorizontalAlignment="Left" Margin="120,169,0,0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" FontSize="14" Height="40" Width="104" Click="AnmeldeBtn_Click"/>

    </Grid>
</Window>
